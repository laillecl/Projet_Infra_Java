package demineur.vue.ihm;

import javax.swing.*;
import java.awt.*;
import java.awt.event.*;

public class Grille extends JFrame {
	
public Grille()
{
	super( "Grille" );
	setSize(800 ,800);
	show();
}

public void paint( Graphics g )
{
	/*
	int y = 30, x1 = 30;
	for ( int r = 1; r <= 8; r++, y += 10 )
		g.drawLine( 30, y, 100, y );
	for ( int c = 1; c <= 8; c++, x1 += 10 )
		g.drawLine( x1, 30, x1, 100 );
	*/
	int origineX = 0;
	int origineY = 0;
	int nbLignes = 6;
	int tailleX = 600;
	int tailleY = 600;
	
	
	for(int i=0; i<10; i++) {
		g.drawLine(origineX, origineY + tailleY/nbLignes * i, tailleY, origineY + tailleY/nbLignes * i);
		g.drawLine(origineY + tailleY/nbLignes * i, origineX , origineY + tailleY/nbLignes * i, tailleX);

	}
	
}

public static void main( String args[] )
{
	Grille app = new Grille();
	app.addWindowListener(
			new WindowAdapter() {
				public void windowClosing( WindowEvent e )
				{
					System.exit( 0 );
				}
			}
			);
	}
}