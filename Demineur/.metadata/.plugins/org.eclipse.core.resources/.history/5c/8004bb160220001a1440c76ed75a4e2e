package demineur.controleur.action;

import java.awt.event.MouseEvent;

import demineur.controleur.outils.Coordonnees;

public class ActionClic extends Action {

	public ActionClic() {
		super();
	}

	public boolean compareCoord(Coordonnees c1, Coordonnees c2) {
		return (c1.getAbscisse() == c2.getAbscisse() && c1.getOrdonnee() == c2.getOrdonnee());
	}

	@Override
	public void mousePressed(MouseEvent e) {
		super.mousePressed(e);
	}

	@Override
	public void mouseClicked(MouseEvent e) {

	}

	@Override
	public void mouseReleased(MouseEvent e) {
		super.mouseReleased(e);
	}
}
