package demineur.vue.ihm;

import javax.swing.*;
import java.awt.*;
import java.awt.event.*;

public class Grille extends JFrame {
	//Variables
	int longueur;
	int largeur;
	
public Grille(int longueur, int largeur)
{
	super("Démineur");
	setSize(longueur , largeur);
	this.longueur = longueur;
	this.largeur = largeur;
}

public void paint( Graphics g )
{
	int origineX = 0;
	int origineY = 0;
	int nbLignes = 6;
	int tailleX = 600;
	int tailleY = 600;
	
	//TODO - Ajouter les lignes d'origine	
	for(int i=0; i<7; i++) {
		g.drawLine(origineX, origineY + tailleY/nbLignes * i, tailleY, origineY + tailleY/nbLignes * i);
		g.drawLine(origineY + tailleY/nbLignes * i, origineX , origineY + tailleY/nbLignes * i, tailleX);

	}
	
}
	
}